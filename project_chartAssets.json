{
   "$schema":"https://vega.github.io/schema/vega-lite/v5.json",
   "data":{
      "url":"https://raw.githubusercontent.com/James-Wilkins/James-Wilkins.github.io/main/CBBalanceSheetFINAL.csv"
   },
   "width":300,
   "height":280,  
   "encoding":{
      "x":{
         "field":"Date",
         "title":"Date",
         "type":"temporal"
      }
   },
   "layer":[
      {
         "encoding":{
            "color":{
               "field":"Area",
               "type":"nominal"
            },
            "y":{
               "field":"Assets",
               "title":"Assets (Millions of Dollars)",
               "type":"quantitative"
            }
         },
         "layer":[
            {
               "mark":"line"
            },
            {
               "transform":[
                  {
                     "filter":{
                        "param":"hover",
                        "empty":false
                     }
                  }
               ],
               "mark":"point"
            }
         ]
      },
      {
         "transform":[
            {
               "pivot":"Area",
               "value":"Assets",
               "groupby":[
                  "Date"
               ]
            }
         ],
         "mark":"rule",
         "encoding":{
            "opacity":{
               "condition":{
                  "value":0.3,
                  "param":"hover",
                  "empty":false
               },
               "value":0
            },
            "tooltip":[
               {
                  "field":"Europe",
                  "type":"quantitative"
               },
               {
                  "field":"USA",
                  "type":"quantitative"
               },
               {
                  "field":"UK",
                  "type":"quantitative"
               }
            ]
         },
         "params":[
            {
               "name":"hover",
               "select":{
                  "type":"point",
                  "fields":[
                     "Date"
                  ],
                  "nearest":true,
                  "on":"mouseover",
                  "clear":"mouseout"
               }
            }
         ]
      }
   ]
}
