{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Pre",
    "title": {
    "text": "Macroeconomic Factor Decomposition Pre-Covid",
    "subtitle":". Data Source: FRED",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },
  
  
  "data": {
    "values": [
      {"a": "Unemployment Rate", "b": -70.85308174 },
      {"a": "Inflation (CPI)", "b": 51.00890477},
      {"a": "Interest Rates", "b": -41.80306366},
      {"a": "Credit Spreads", "b": -280.26800685},
      {"a": "Industrial Production", "b": 25.37211966},
      {"a": "Consumer Sentiment", "b": 3.69054972}
    ]
  },
  "encoding": {
    "y": {
      "field": "a",
      "title": "Macroeconomic Factor",
      "type": "nominal",
      "axis": {
        "domain": false,
        "ticks": false,
        "labelAngle": 0,
        "labelPadding": 4
      }
    },
    "x": {
      "field": "b",
      "title": "Correlation Coefficient",
      "type": "quantitative",
      "scale": {"padding": 20},
      "axis": {
        "gridColor": {
          "condition": {"test": "datum.value === 0", "value": "black"},
          "value": "#ddd"
        }
      }
    }
  },
  "layer": [
    {"mark": "bar"},
    {
      "mark": {
        "type": "text",
        "align": {"expr": "datum.b < 0 ? 'right' : 'left'"},
        "dx": {"expr": "datum.b < 0 ? -2 : 2"}
      },
      "encoding": {"text": {"field": "b", "type": "quantitative"}}
    }
  ]
}
