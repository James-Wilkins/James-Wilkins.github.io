{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
"title": {
      "text": "Top 10 Highest VIX Months in the past 20 years",
      "subtitle":"The months in the past 20 years when the VIX was highest (Source: FRED)",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
},

  "data": {
    "url": "VIXCLS.csv"},
  
  "params": [
    {
      "name": "highlight",
      "select": {"type": "point", "on": "mouseover"}
    },
    {"name": "select", "select": "point"}
  ],
  "mark": {
    "type": "bar",
    "fill": "#a84c72",
    "stroke": "black",
    "cursor": "pointer"
  },
  "encoding": {
    "x": {"field": "DATE", "type": "ordinal", "title": "Date"},
    "y": {"field": "VIXCLS", "type": "quantitative", "title": "VIX Price ($)"},
    "fillOpacity": {
      "condition": {"param": "select", "value": 1},
      "value": 0.3
    },
    "strokeWidth": {
      "condition": [
        {
          "param": "select",
          "empty": false,
          "value": 2
        },
        {
          "param": "highlight",
          "empty": false,
          "value": 1
        }
      ],
      "value": 0
    }
  },
  "config": {
    "scale": {
      "bandPaddingInner": 0.3
    }
  }
}
