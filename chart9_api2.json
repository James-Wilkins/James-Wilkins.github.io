  },

  "height": 300,
  "width": 300,
  "layer": [
    {


      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "x": {
          "field": "spot_volume",
          "type": "quantitative"
        },
        "y": {
          "field": "derivative_volume",
          "type": "quantitative"
          
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "orange"
      },
      "transform": [
        {
          "regression": "spot_volume",
          "on": "derivative_volume"
        }
      ],
      "encoding": {
        "x": {
          "field": "spot_volume",
          "type": "quantitative",
          "scale":{"domain":[0,200000000000]}
      
        },
        "y": {
          "field": "derivative_volume",
          "type": "quantitative",
          "scale":{"domain":[0,200000000000]}
          
        }
      }
    },
    {
      "transform": [
        {
          "regression": "spot_volume",
          "on": "derivative_volume",
          "params": true
        },
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "firebrick",
        "x": "width",
        "align": "right",
        "y": -5
      },
      "encoding": {
        "text": {"type": "nominal", "field": "R2"}
      }
    }
  ]
}
